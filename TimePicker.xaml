<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MicrophoneProject.TimePicker"
	x:Name="UserControl" Height="264" Width="520">

	<Grid x:Name="LayoutRoot">
		<Slider x:Name="sldPicker" Orientation="Vertical" Margin="122,8,0,8" RenderTransformOrigin="0.5,0.5" Template="{DynamicResource metroVerticalSlider}" HorizontalAlignment="Left" Width="75" d:LayoutOverrides="HorizontalAlignment" Maximum="5" ValueChanged="Slider_ValueChanged" />
		<Button x:Name="btnTen" Content="10 seg" HorizontalAlignment="Left" Margin="8,0,0,8" VerticalAlignment="Bottom" Width="110" ClickMode="Press" Height="56.96" Template="{DynamicResource metroButton}" />
		<Button x:Name="btnHalf" Content="30 seg" HorizontalAlignment="Left" Margin="8,0,0,68.96" Width="110" ClickMode="Press" Template="{DynamicResource metroButton}" Height="56.96" VerticalAlignment="Bottom" />
		<Button x:Name="btnOne" Content="1 min" HorizontalAlignment="Left" Margin="8,77.12,0,129.92" Width="110" ClickMode="Press" Template="{DynamicResource metroButton}" d:LayoutOverrides="HorizontalAlignment" />
		<Button x:Name="btnFree" Content="Libre" HorizontalAlignment="Left" Margin="8,16.16,0,0" Width="110" ClickMode="Press" Template="{DynamicResource metroButton}" Height="56.96" VerticalAlignment="Top" d:LayoutOverrides="HorizontalAlignment" />
	</Grid>
</UserControl>