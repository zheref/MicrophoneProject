<Application
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MicrophoneProject.App"
	StartupUri="MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Metro.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			<!-- Debe definir aquí los recursos en el ámbito del nivel de aplicación. -->
			<Style x:Key="tile" TargetType="{x:Type TextBlock}">
				<Setter Property="FontFamily" Value="Segoe UI" />
				<Setter Property="FontStyle" Value="Normal" />
				<Setter Property="FontWeight" Value="Light" />
				<Setter Property="FontSize" Value="18" />
				<Setter Property="Background" Value="Transparent" />
				<Setter Property="Cursor" Value="None" />
			</Style>
			<Style x:Key="tab" BasedOn="{StaticResource tile}" TargetType="{x:Type TextBlock}">
				<Setter Property="Cursor" Value="Hand" />
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>