	x:Class="MicrophoneProject.AboutInstartius"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot">
		<TextBlock HorizontalAlignment="Left" Margin="22.813,48,0,0" TextWrapping="Wrap" Text="Software desarrollado por" VerticalAlignment="Top" Style="{DynamicResource metroCaption}"/>
		<Image Height="100" Margin="0,120,0,0" VerticalAlignment="Top" Source="logoof2.png" HorizontalAlignment="Center"/>
