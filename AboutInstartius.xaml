		<Button Content="Volver" HorizontalAlignment="Right" Margin="0,0,8,8" VerticalAlignment="Bottom" Width="112" Template="{DynamicResource metroButton}" Style="{DynamicResource metroButtonDefaultStyle}" Height="48" Click="Button_Click" FontSize="18.667"/>
		<TextBlock HorizontalAlignment="Center" Margin="0,240,0,0" TextWrapping="Wrap" Text="www.instartius.com" Style="{DynamicResource metroCaption}" FontSize="21.333" Height="28" VerticalAlignment="Top" FontWeight="Normal" FontFamily="Segoe UI Semibold"/>
