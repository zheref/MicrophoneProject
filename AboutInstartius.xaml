		<TextBlock HorizontalAlignment="Left" Margin="172.143,0,0,180" TextWrapping="Wrap" Text="Sergio Daniel Lozano García" Style="{DynamicResource metroCaption}" FontSize="21.333" Height="28" VerticalAlignment="Bottom"/>
		<TextBlock HorizontalAlignment="Left" Margin="172.143,0,0,148" TextWrapping="Wrap" Text="Contacto y soporte técnico" Style="{DynamicResource metroCaption}" FontSize="21.333" Height="28" VerticalAlignment="Bottom"/>
